{
  "extends": ["eslint:recommended", "prettier", "prettier/react"],
  "plugins": ["react-hooks"],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "react-hooks/rules-of-hooks": 2,
    "react-hooks/exhaustive-deps": 1
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  }
}
